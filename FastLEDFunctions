//This will be rolled into the main code, just keeping seperate for sound syncing and progress

#include <FastLED.h>
#define COLOR_ORDER GRB
#define CHIPSET     WS2812
#define BRIGHTNESS  255
#define FRAMES_PER_SECOND 60

const int numLEDS = 8;
const int ledPin = 10;
bool gReverseDirection = false;

int colorPicker1;
int colorPicker2;
int colorPicker3;
int colorPicker4;

CRGB leds[numLEDS];

unsigned long animationStartMillis[numLEDS];
unsigned long animationDuration[numLEDS];
unsigned long maxBrightnessDuration = 100; // Maximum brightness duration in milliseconds

void setup() 
{

FastLED.addLeds<CHIPSET, ledPin, COLOR_ORDER>(leds, numLEDS).setCorrection( TypicalLEDStrip );
randomSeed(analogRead(0)); // Initialize random seed
FastLED.show(); // Initialize LED with all LEDs off
Serial.begin(9600);
}


void loop() {

colorPicker1 = random(3);
colorPicker2 = random(3);
colorPicker3 = random(3);
colorPicker4 = random(3);

Serial.println(colorPicker1);
Serial.println(colorPicker2);
Serial.println(colorPicker3);
Serial.println(colorPicker4);
electricity();
delay(5000);

}




void electricity() {



/*///////////////////////SOLID WHITE 100ms BLINK

//off
//029
//on
//2370
//off 100



            //solid white max brightness 50ms
            for (int i = 0; i <= numLEDS -1; i++){
                if (i == 0 | i == 2| i == 4 | i == 6){
                leds[i] = CRGB::White; // LED on
                FastLED.show();
                }
            }
            delay(50);
            FastLED.clear();
            FastLED.show();
            delay(1000);

////////////////////////////////////////////////////*/        


/////////////////////////////////Random Fade in or out/////////////////////
  
           for (int brightness = 0; brightness <= 255; brightness++){ // total steps to go through
                     
              if (colorPicker1 == 0){
                  leds[0] = CRGB::White;
              }
              else if (colorPicker1 == 1){
                leds[0] = CRGB::Yellow;
              }
              else if (colorPicker1 == 2){
                leds[0] = CRGB::Blue;
              }

              if (colorPicker2 == 0){
                  leds[2] = CRGB::White;
              }
              else if (colorPicker2 == 1){
                leds[2] = CRGB::Yellow;
              }
              else if (colorPicker2 == 2){
                leds[2] = CRGB::Blue;
              }
               
              if (colorPicker3 == 0){
                  leds[4] = CRGB::White;
              }
              else if (colorPicker3 == 1){
                leds[4] = CRGB::Yellow;
              }
              else if (colorPicker3 == 2){
                leds[4] = CRGB::Blue;
              }
              
              if (colorPicker4 == 0){
                  leds[6] = CRGB::White;
              }
              else if (colorPicker4 == 1){
                leds[6] = CRGB::Yellow;
              }
              else if (colorPicker4 == 2){
                leds[6] = CRGB::Blue;
              }

    for (int i = 0; i < numLEDS; i++) {     
       if (i == 0 || i == 2 || i == 4 || i == 6) {         
        leds[i].fadeToBlackBy(255 - brightness);
        FastLED.show();
        delay(random(500,1000));

      }
    }
  }
  FastLED.show();
  delay(10); // Adjust the delay as needed for the desired fading speed
}
////////////////////////////////////////////////////////////////////////////






void sparks() {
  
  CRGB targetColor = CRGB::RoyalBlue;

    for (int i = 0; i <= numLEDS -1; i++){
      if (i == 0 | i == 2| i == 4 | i == 6){
      leds[i] = CRGB::Black;
      FastLED.show(); 
      }
    }

delay(115);

  for (int brightness = 0; brightness <= 255; brightness++) {
    for (int i=0;i <=numLEDS -1; i++){
      if (i == 0 | i == 2| i == 4 | i == 6){    
      leds[i] = targetColor;
      leds[i].fadeToBlackBy(255 - brightness); //fade out
      FastLED.show();
      delay(1157 / 255);
      
      }
     }       
    }
  

    for (int i = 0; i <= numLEDS -1; i++){
      if (i == 0 | i == 2| i == 4 | i == 6){
      leds[i] = CRGB::Black;
      FastLED.show(); 
       }
    }

delay(077);

    for (int i=0;i <=numLEDS -1; i++){
      if (i == 0 | i == 2| i == 4 | i == 6){    
      leds[i] = targetColor;
      FastLED.show(); 
      }
     }
delay(181);

    for (int i = 0; i <= numLEDS -1; i++){
      if (i == 0 | i == 2| i == 4 | i == 6){
      leds[i] = CRGB::Black;
      FastLED.show(); 
      }
    }
delay(100);
}





